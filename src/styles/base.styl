@import '~normalize.css'
@import '~prismjs/themes/prism.css'

//
// variable
// -----------------------------------------

fontSize = 16px

bgColor = #fff
textColor = #000
linkColor = #08c
metaColor = #888
codeBgColor = #f7f7f7

//
// common
// -----------------------------------------

/::-moz-selection,
/::selection
  background #B2D7FF

body
  // font
  // font-family '-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif'
  font-size fontSize
  line-height 2
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust none
  // size
  position relative
  max-width 700px
  margin 0 auto
  padding 0
  background bgColor
  color textColor

h1
h2,
h3,
h4,
h5,
h6
  font-size: 1em

a
  text-decoration none
  color linkColor
  overflow-wrap break-word
  word-break break-all

a.nav-link .site-title
  color textColor

a.site-title
  font-weight bolder
  margin 0
  background-color red
  color white

a.about-link
  background-color lightgray
  color white

a.project-link
  background-color gainsboro
  color white
//
// Shared
// -----------------------------------------

table{
    border-collapse: collapse;
    border-spacing: 0;
    border:1px solid lightgrey;
    margin: auto;
}

th{
    border:1px solid lightgrey;
    text-align: center;
    min-width: 40px;
}

td{
    border:1px solid lightgrey;
    min-width: 40px;
    text-align: center;
}

.header
  margin 50px auto
  text-align center
  a.site-title
    font-size 2.4em
    letter-spacing 5px
    text-transform uppercase
    color textColor
    font-weight bold
  a.about
    font-weight 300

.footer
  text-align center
  font-weight 300
